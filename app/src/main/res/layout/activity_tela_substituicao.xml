<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".tela_substituicao" >

    <EditText
        android:id="@+id/subs_nota1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:hint="Subst. Nota1"
        android:inputType="numberDecimal"
        android:padding="20dp" />


    <EditText
        android:id="@+id/subs_nota2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/subs_nota1"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:hint="Subst. Nota2"
        android:inputType="numberDecimal"
        android:padding="20dp" />

    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/recalcularNota"
        android:layout_below="@+id/subs_nota2"
        android:text="Recalcular a Nota"
        android:textSize="15dp"
        android:textColor="@color/white"
        android:backgroundTint="@color/purple_700"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"
        android:padding="15dp"
        android:width="400dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/resultadoSubst"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/recalcularNota"
        android:hint="Resultado"
        android:inputType="numberDecimal"
        android:padding="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"/>
</RelativeLayout>